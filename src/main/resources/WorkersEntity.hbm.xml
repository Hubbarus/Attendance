<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.paul.attendance.entity.WorkersEntity" table="Workers" schema="attendanceDB">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="photo">
            <column name="photo" sql-type="text"/>
        </property>
        <property name="name">
            <column name="name" sql-type="text"/>
        </property>
        <property name="surname">
            <column name="surname" sql-type="text"/>
        </property>
        <property name="birth">
            <column name="birth" sql-type="date"/>
        </property>
        <property name="age">
            <column name="age" sql-type="int(11)"/>
        </property>
        <property name="profession">
            <column name="profession" sql-type="text"/>
        </property>
        <property name="remote">
            <column name="remote" sql-type="tinyint(1)"/>
        </property>
        <property name="address">
            <column name="address" sql-type="text"/>
        </property>
        <many-to-one name="departmentsByDepartment" class="com.paul.attendance.entity.DepartmentsEntity">
            <column name="department"/>
        </many-to-one>
        <set name="daysById" inverse="true">
            <key>
                <column name="worker"/>
            </key>
            <one-to-many not-found="ignore" class="com.paul.attendance.entity.DaysEntity"/>
        </set>
    </class>
</hibernate-mapping>