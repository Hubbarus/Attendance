<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.paul.attendance.entity.ScheduleEntity" table="Schedule" schema="attendanceDB">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="date">
            <column name="date" sql-type="date"/>
        </property>
        <property name="tag">
            <column name="tag" sql-type="text"/>
        </property>
        <many-to-one name="employeeByEmployee" class="com.paul.attendance.entity.EmployeeEntity">
            <column name="employee"/>
        </many-to-one>
    </class>
</hibernate-mapping>